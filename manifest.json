{
  "manifest_version": 3,
  "name": "Trợ lý bài tập Gemini",
  "version": "1.1",
  "description": "Hỗ trợ làm bài tập bằng Gemini AI – chụp ảnh, hỏi đáp, tiếng Việt chuẩn.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Chụp ảnh màn hình"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
